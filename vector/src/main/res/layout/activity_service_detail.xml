<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/VectorToolbarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        tools:context="im.vector.activity.KeysBackupSetupActivity">

        <TextView
            android:id="@+id/phoneHeading"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/layout_horizontal_margin"
            android:paddingLeft="@dimen/layout_horizontal_margin"
            android:paddingTop="@dimen/heading_padding"
            android:paddingRight="@dimen/layout_horizontal_margin"
            android:paddingBottom="@dimen/heading_padding"
            android:text="@string/work"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/phoneValue"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/layout_horizontal_margin"
            android:paddingLeft="@dimen/layout_horizontal_margin"
            android:paddingRight="@dimen/layout_horizontal_margin"
            android:paddingBottom="@dimen/heading_padding"
            android:text="+61223345390"
            android:textSize="@dimen/title_text_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phoneHeading" />

        <ImageView
            android:id="@+id/callIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="@dimen/layout_horizontal_margin"
            android:layout_marginRight="@dimen/layout_horizontal_margin"
            android:background="@drawable/button_circle_background"
            android:foreground="?attr/selectableItemBackground"
            android:padding="@dimen/detail_button_padding"
            android:src="@drawable/ic_material_call_white"
            android:tint="@color/act_gradient_color1"
            app:layout_constraintBottom_toBottomOf="@+id/phoneValue"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/phoneHeading" />

        <View
            android:id="@+id/callSeparator"
            android:layout_width="0dp"
            android:layout_height=".8dp"
            android:layout_marginLeft="@dimen/layout_horizontal_margin"
            android:layout_marginTop="@dimen/layout_vertical_margin"
            android:layout_marginEnd="@dimen/layout_horizontal_margin"
            android:layout_marginRight="@dimen/layout_horizontal_margin"
            android:background="?vctr_list_divider_color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phoneValue" />

        <TextView
            android:id="@+id/locationHeading"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/layout_horizontal_margin"
            android:paddingLeft="@dimen/layout_horizontal_margin"
            android:paddingTop="@dimen/heading_padding"
            android:paddingRight="@dimen/layout_horizontal_margin"
            android:paddingBottom="@dimen/heading_padding"
            android:text="@string/location"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/callSeparator" />

        <TextView
            android:id="@+id/locationValue1"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/layout_horizontal_margin"
            android:paddingLeft="@dimen/layout_horizontal_margin"
            android:paddingRight="@dimen/layout_horizontal_margin"
            android:paddingBottom="@dimen/heading_padding"
            android:text="01.06.21.17"
            android:textSize="@dimen/title_text_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/locationHeading" />

        <TextView
            android:id="@+id/locationValue2"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/layout_horizontal_margin"
            android:paddingLeft="@dimen/layout_horizontal_margin"
            android:paddingRight="@dimen/layout_horizontal_margin"
            android:paddingBottom="@dimen/heading_padding"
            android:text="Building 1 Level 2 Ophthalmology Clinic"
            android:textSize="@dimen/title_text_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/locationValue1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>