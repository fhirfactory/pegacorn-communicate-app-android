<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/layout_vertical_margin"
    android:paddingRight="@dimen/layout_vertical_margin"
    android:paddingBottom="@dimen/layout_vertical_margin">

    <ImageView
        android:id="@+id/codeImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="@dimen/layout_vertical_margin_half"
        android:src="@drawable/filled_circle"
        app:layout_constraintBottom_toBottomOf="@+id/codeDate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/codeName" />

    <TextView
        android:id="@+id/codeName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CODE BLUE ADULT TCH"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/codeLocation"
        app:layout_constraintLeft_toRightOf="@+id/codeImageView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/codeLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TCH BLD1 L2 CENTRAL OUTPATIENTS"
        app:layout_constraintBottom_toTopOf="@+id/codeDate"
        app:layout_constraintLeft_toRightOf="@+id/codeImageView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/codeName" />

    <TextView
        android:id="@+id/codeDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="28-Aug-2020 09:25:14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/codeImageView"
        app:layout_constraintTop_toBottomOf="@+id/codeLocation" />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active"
        android:textColor="@color/vector_dark_grey_color"
        app:layout_constraintBottom_toBottomOf="@+id/codeDate"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>