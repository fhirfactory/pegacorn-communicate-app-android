<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:paddingBottom="@dimen/layout_horizontal_margin"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/heading"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/heading_background"
        android:paddingStart="@dimen/layout_horizontal_margin"
        android:paddingLeft="@dimen/layout_horizontal_margin"
        android:paddingTop="@dimen/heading_padding"
        android:paddingRight="@dimen/layout_horizontal_margin"
        android:paddingBottom="@dimen/heading_padding"
        android:text="@string/roles_title"
        android:textSize="@dimen/title_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/selected"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="@dimen/layout_horizontal_margin_half"
        android:src="@drawable/ic_radio_button_unchecked"
        android:tint="?attr/vctr_list_icon_tint_color"
        app:layout_constraintBottom_toBottomOf="@+id/avatar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/avatar" />

    <im.vector.view.VectorCircularImageView
        android:id="@+id/avatar"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="@dimen/layout_horizontal_margin_half"
        android:layout_marginLeft="@dimen/layout_horizontal_margin_half"
        android:layout_marginTop="@dimen/layout_vertical_margin"
        app:layout_constraintLeft_toRightOf="@+id/selected"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        tools:src="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/favoriteIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="@dimen/layout_horizontal_margin_half"
        android:layout_marginRight="@dimen/layout_horizontal_margin_half"
        android:src="@drawable/ic_material_star_black"
        android:tint="?attr/vctr_list_icon_tint_color"
        app:layout_constraintRight_toLeftOf="@+id/expandableIcon"
        app:layout_constraintTop_toTopOf="@+id/expandableIcon" />

    <ImageView
        android:id="@+id/expandableIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/layout_vertical_margin"
        android:layout_marginEnd="@dimen/layout_horizontal_margin"
        android:layout_marginRight="@dimen/layout_horizontal_margin"
        android:src="@drawable/ic_expand"
        android:tint="?attr/vctr_list_icon_tint_color"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading" />

    <ImageView
        android:id="@+id/voiceCallIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="@dimen/layout_horizontal_margin"
        android:layout_marginRight="@dimen/layout_horizontal_margin"
        android:src="@drawable/ic_call_black"
        android:tint="?attr/vctr_list_icon_tint_color"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favoriteIcon" />

    <ImageView
        android:id="@+id/videoCallIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="@dimen/layout_horizontal_margin_half"
        android:layout_marginRight="@dimen/layout_horizontal_margin_half"
        android:src="@drawable/video_call_black"
        android:tint="?attr/vctr_list_icon_tint_color"
        app:layout_constraintRight_toLeftOf="@+id/expandableIcon"
        app:layout_constraintTop_toBottomOf="@+id/favoriteIcon" />

    <TextView
        android:id="@+id/officialName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_horizontal_margin_half"
        android:layout_marginRight="@dimen/layout_horizontal_margin_half"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/secondaryName"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toRightOf="@+id/avatar"
        app:layout_constraintRight_toLeftOf="@+id/filledSwitch"
        app:layout_constraintTop_toTopOf="@+id/avatar"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/secondaryName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_horizontal_margin_half"
        android:layout_marginLeft="@dimen/layout_horizontal_margin_half"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="@dimen/layout_horizontal_margin_half"
        android:layout_marginRight="@dimen/layout_horizontal_margin"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toRightOf="@+id/avatar"
        app:layout_constraintRight_toLeftOf="@+id/favoriteIcon"
        app:layout_constraintTop_toBottomOf="@+id/officialName" />

    <Switch
        android:id="@+id/filledSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_horizontal_margin_half"
        android:checked="true"
        android:clickable="false"
        android:scaleX=".9"
        android:scaleY=".9"
        android:text="Filled"
        app:layout_constraintRight_toLeftOf="@+id/favoriteIcon"
        app:layout_constraintTop_toTopOf="@+id/officialName" />

    <TextView
        android:id="@+id/roleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_horizontal_margin"
        android:layout_marginLeft="@dimen/layout_horizontal_margin"
        android:layout_marginTop="8dp"
        android:layout_marginRight="@dimen/layout_horizontal_margin"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatar" />

    <TextView
        android:id="@+id/categoryText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_horizontal_margin"
        android:layout_marginLeft="@dimen/layout_horizontal_margin"
        android:layout_marginTop="2dp"
        android:layout_marginRight="@dimen/layout_horizontal_margin"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roleText" />

    <TextView
        android:id="@+id/orgUnitText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_horizontal_margin"
        android:layout_marginLeft="@dimen/layout_horizontal_margin"
        android:layout_marginTop="2dp"
        android:layout_marginRight="@dimen/layout_horizontal_margin"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/categoryText" />

    <TextView
        android:id="@+id/locationText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_horizontal_margin"
        android:layout_marginLeft="@dimen/layout_horizontal_margin"
        android:layout_marginTop="2dp"
        android:layout_marginRight="@dimen/layout_horizontal_margin"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orgUnitText" />

</androidx.constraintlayout.widget.ConstraintLayout>