<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingLeft="@dimen/layout_horizontal_margin"
    android:paddingTop="@dimen/layout_horizontal_margin_half"
    android:paddingBottom="@dimen/layout_horizontal_margin_half">

    <ImageView
        android:id="@+id/voiceCallIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="@dimen/layout_horizontal_margin"
        android:src="@drawable/ic_call_black"
        android:tint="?attr/vctr_list_icon_tint_color"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/locationHeading" />

    <ImageView
        android:id="@+id/favoriteIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="@dimen/layout_horizontal_margin"
        android:layout_marginRight="@dimen/layout_horizontal_margin"
        android:src="@drawable/ic_material_star_black"
        android:tint="?attr/vctr_list_icon_tint_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/voiceCallIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/officialName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/layout_horizontal_margin_half"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Ophthalmology Clinic"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/favoriteIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/locationHeading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="@dimen/layout_horizontal_margin_half"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Location"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/voiceCallIcon"
        app:layout_constraintTop_toBottomOf="@+id/officialName" />

    <TextView
        android:id="@+id/locationCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginRight="@dimen/layout_horizontal_margin"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="01.06.21.17"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationHeading" />

    <TextView
        android:id="@+id/locationDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginRight="@dimen/layout_horizontal_margin"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Building 1 Level 2 Ophthalmology Clinic"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationCode" />
</androidx.constraintlayout.widget.ConstraintLayout>