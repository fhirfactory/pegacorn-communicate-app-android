<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/room_directory_main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/layout_horizontal_margin_half">

    <TextView
        android:id="@+id/heading"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/heading_background"
        android:paddingStart="@dimen/layout_horizontal_margin"
        android:paddingLeft="@dimen/layout_horizontal_margin"
        android:paddingTop="@dimen/heading_padding"
        android:textStyle="bold"
        android:paddingRight="@dimen/layout_horizontal_margin"
        android:paddingBottom="@dimen/heading_padding"
        android:text="@string/title_activity_role_detail"
        android:textSize="@dimen/title_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/officialName"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_horizontal_margin"
        android:layout_marginLeft="@dimen/layout_horizontal_margin"
        android:layout_marginTop="@dimen/layout_horizontal_margin_half"
        android:paddingStart="@dimen/layout_horizontal_margin"
        android:paddingLeft="@dimen/layout_horizontal_margin"
        android:paddingEnd="@dimen/layout_horizontal_margin"
        android:text="@string/title_activity_role_detail"
        android:textSize="@dimen/sub_title_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading" />

    <TextView
        android:id="@+id/secondaryName"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_horizontal_margin"
        android:layout_marginLeft="@dimen/layout_horizontal_margin"
        android:paddingStart="@dimen/layout_horizontal_margin"
        android:paddingLeft="@dimen/layout_horizontal_margin"
        android:paddingEnd="@dimen/layout_horizontal_margin"
        android:text="@string/title_activity_role_detail"
        android:textSize="@dimen/sub_title_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/officialName" />

</androidx.constraintlayout.widget.ConstraintLayout>