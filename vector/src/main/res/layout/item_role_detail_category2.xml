<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/room_directory_main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/heading"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/heading_background"
        android:paddingStart="@dimen/layout_horizontal_margin"
        android:paddingLeft="@dimen/layout_horizontal_margin"
        android:paddingTop="@dimen/heading_padding"
        android:paddingRight="@dimen/layout_horizontal_margin"
        android:paddingBottom="@dimen/heading_padding"
        android:text="@string/title_activity_role_detail"
        android:textSize="@dimen/title_text_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <im.vector.view.VectorCircularImageView
        android:id="@+id/avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/layout_horizontal_margin"
        android:layout_marginLeft="@dimen/layout_horizontal_margin"
        android:layout_marginTop="@dimen/layout_horizontal_margin_half"
        android:layout_marginBottom="@dimen/layout_horizontal_margin_half"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading" />

    <TextView
        android:id="@+id/officialName"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/layout_horizontal_margin"
        android:paddingLeft="@dimen/layout_horizontal_margin"
        android:paddingEnd="@dimen/layout_horizontal_margin"
        android:text="@string/title_activity_role_detail"
        android:textSize="@dimen/sub_title_text_size"
        app:layout_constraintBottom_toTopOf="@+id/secondaryName"
        app:layout_constraintLeft_toRightOf="@+id/avatar"
        app:layout_constraintTop_toTopOf="@id/avatar"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/secondaryName"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/layout_horizontal_margin"
        android:paddingLeft="@dimen/layout_horizontal_margin"
        android:paddingEnd="@dimen/layout_horizontal_margin"
        android:text="@string/title_activity_role_detail"
        android:textSize="@dimen/sub_title_text_size"
        app:layout_constraintBottom_toBottomOf="@id/avatar"
        app:layout_constraintLeft_toRightOf="@+id/avatar"
        app:layout_constraintTop_toBottomOf="@+id/officialName" />

    <View
        android:id="@+id/line"
        android:layout_width="0dp"
        android:layout_height=".8dp"
        android:background="@color/heading_background"
        app:layout_constraintLeft_toRightOf="@+id/avatar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>